    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Build system",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build STBuild.csproj",
            "program": "${workspaceFolder}/.stbuild/build/bin/stbuild.exe",
            "args": [
                "--target Compile"
            ],
            "cwd": "${workspaceFolder}/.stbuild",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}
